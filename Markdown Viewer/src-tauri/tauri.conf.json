{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Markdown Viewer",
  "version": "0.1.0",
  "identifier": "markdown-viewer",
  "build": {
    "frontendDist": "../src"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "Markdown Viewer",
        "width": 1200,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600,
        "fileDropEnabled": true
      }
    ],
    "security": {
      "csp": null
    }
  },

  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "fileAssociations": [
      {
        "ext": ["md", "markdown", "txt"],
        "name": "Markdown Document",
        "description": "Markdown text document",
        "role": "Editor",
        "mimeType": "text/markdown"
      }
    ],
    "windows": {
      "allowDowngrades": false,
      "wix": {
        "language": "en-US"
      }
    }
  }
}
