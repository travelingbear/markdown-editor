{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Markdown Editor",
  "version": "2.1.4",
  "identifier": "com.markdownviewer.desktop",
  "build": {
    "frontendDist": "../src"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "label": "main",
        "title": "Markdown Editor",
        "width": 1200,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600,
        "dragDropEnabled": true,
        "fullscreen": false,
        "resizable": true
      }
    ],
    "security": {
      "csp": "default-src 'self'; img-src 'self' data: https: http: file: asset: tauri:; media-src 'self' data: https: http: file: asset: tauri:; style-src 'self' 'unsafe-inline' https:; script-src 'self' 'unsafe-inline' 'unsafe-eval' https:; connect-src 'self' https: http:; font-src 'self' https: data:;"
    }
  },

  "bundle": {
    "active": true,
    "targets": "all",
    "publisher": "Francisco Fernandes",
    "copyright": "Copyright Â© 2024 Markdown Viewer Team",
    "category": "Productivity",
    "shortDescription": "Professional markdown viewer and editor",
    "longDescription": "A powerful native desktop markdown viewer and editor built with Tauri + Rust + TypeScript. Features three-mode interface, Monaco Editor, real-time preview, KaTeX math, Mermaid diagrams, and advanced export options.",
    "icon": [
      "icons/favicon.ico",
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/icon.png"
    ],
    "fileAssociations": [
      {
        "ext": ["md", "markdown"],
        "name": "Markdown Document",
        "description": "Markdown text document",
        "role": "Editor"
      }
    ],
    "windows": {
      "allowDowngrades": false,
      "wix": {
        "language": "en-US"
      },
      "nsis": {
        "displayLanguageSelector": false,
        "languages": ["English"]
      }
    },
    "linux": {
      "deb": {
        "depends": [],
        "section": "editors",
        "priority": "optional",
        "desktopTemplate": "markdown-editor.desktop"
      },
      "rpm": {
        "depends": []
      },
      "appimage": {
        "bundleMediaFramework": false
      }
    },
    "macOS": {
      "minimumSystemVersion": "10.13",
      "exceptionDomain": "localhost"
    }
  }
}
