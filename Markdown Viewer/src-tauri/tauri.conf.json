{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Markdown Editor",
  "version": "3.3.0",
  "identifier": "com.markdownviewer.desktop",
  "build": {
    "frontendDist": "../src"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "label": "main",
        "title": "Markdown Editor",
        "width": 1200,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600,
        "dragDropEnabled": false,
        "fullscreen": false,
        "resizable": true,
        "decorations": true
      }
    ],
    "security": {
      "csp": "default-src 'self'; img-src 'self' data: https: http: file: asset: tauri:; media-src 'self' data: https: http: file: asset: tauri:; style-src 'self' 'unsafe-inline' https:; script-src 'self' 'unsafe-inline' 'unsafe-eval' https:; connect-src 'self' https: http: ipc: tauri:; font-src 'self' https: data:;",
      "capabilities": [
        {
          "identifier": "main-capability",
          "description": "Main window capabilities",
          "windows": ["main"],
          "permissions": [
            "core:webview:allow-print",
            "core:app:allow-version",
            "core:app:default",
            "dialog:allow-message",
            "dialog:default",
            "core:event:allow-listen",
            "core:event:default",
            "core:event:allow-emit",
            "core:webview:allow-webview-position",
            "core:webview:allow-webview-size",
            {
              "identifier": "fs:allow-read-file",
              "allow": [{
                "path": "**"
              }]
            },
            "fs:allow-write-file",
            "fs:default",
            "dialog:allow-open",
            "dialog:allow-save",
            "core:window:allow-destroy",
            "core:window:allow-set-focus",
            "core:window:allow-unminimize",
            "core:window:allow-set-fullscreen",
            "core:window:allow-is-fullscreen",
            "core:window:default",
            "core:window:allow-start-dragging",
            "core:path:default",
            "opener:allow-open-url",
            "opener:default",
            "fs:allow-exists",
            {
              "identifier": "fs:allow-read-text-file",
              "allow": [{
                "path": "**"
              }]
            },
            {
              "identifier": "fs:allow-write-text-file",
              "allow": [{
                "path": "**"
              }]
            }
          ]
        }
      ]
    }
  },

  "bundle": {
    "active": true,
    "targets": "all",
    "publisher": "Francisco Fernandes",
    "copyright": "Copyright Â© 2024 Markdown Viewer Team",
    "category": "Productivity",
    "shortDescription": "Professional markdown viewer and editor",
    "longDescription": "A powerful native desktop markdown viewer and editor built with Tauri + Rust + TypeScript. Features three-mode interface, Monaco Editor, real-time preview, KaTeX math, Mermaid diagrams, and advanced export options.",
    "icon": [
      "icons/favicon.ico",
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/icon.png",
      "icons/icon.icns"
    ],
    "fileAssociations": [
      {
        "ext": ["md", "markdown"],
        "name": "Markdown Document",
        "description": "Markdown text document",
        "role": "Editor"
      }
    ],
    "windows": {
      "allowDowngrades": false,
      "wix": {
        "language": "en-US"
      },
      "nsis": {
        "displayLanguageSelector": false,
        "languages": ["English"]
      }
    },
    "linux": {
      "deb": {
        "depends": [],
        "section": "editors",
        "priority": "optional",
        "desktopTemplate": "markdown-editor.desktop"
      },
      "rpm": {
        "depends": []
      },
      "appimage": {
        "bundleMediaFramework": false
      }
    },
    "macOS": {
      "minimumSystemVersion": "10.13",
      "exceptionDomain": "localhost"
    }
  }
}
