[Desktop Entry]
Version=1.0
Type=Application
Name=Markdown Editor
Comment=Professional markdown viewer and editor
Exec=markdown-editor %f
Icon=markdown-editor
Terminal=false
Categories=Office;TextEditor;Development;
MimeType=text/markdown;text/x-markdown;application/x-markdown;text/plain;
StartupNotify=true
StartupWMClass=markdown-editor
Keywords=markdown;editor;viewer;text;
Actions=NewFile;

[Desktop Action NewFile]
Name=New File
Exec=markdown-editor --new-file
Icon=markdown-editor