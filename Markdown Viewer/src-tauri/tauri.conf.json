{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Markdown Editor",
  "version": "1.0.0",
  "identifier": "com.markdownviewer.desktop",
  "build": {
    "frontendDist": "../src"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "label": "main",
        "title": "Markdown Editor",
        "width": 1200,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600,
        "dragDropEnabled": true
      }
    ],
    "security": {
      "csp": "default-src 'self'; img-src 'self' data: https: http: file: asset: tauri:; media-src 'self' data: https: http: file: asset: tauri:; style-src 'self' 'unsafe-inline' https:; script-src 'self' 'unsafe-inline' 'unsafe-eval' https:; connect-src 'self' https: http:; font-src 'self' https: data:;"
    }
  },

  "bundle": {
    "active": true,
    "targets": "all",
    "publisher": "Markdown Editor Team",
    "copyright": "Copyright Â© 2024 Markdown Editor Team",
    "category": "DeveloperTool",
    "shortDescription": "Native markdown editor and viewer",
    "longDescription": "A powerful native desktop application for editing and viewing markdown files with real-time preview, syntax highlighting, and advanced features.",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "fileAssociations": [
      {
        "ext": ["md", "markdown", "txt"],
        "name": "Markdown Document",
        "description": "Markdown text document",
        "role": "Editor"
      }
    ],
    "windows": {
      "allowDowngrades": false,
      "wix": {
        "language": "en-US"
      },
      "nsis": {
        "displayLanguageSelector": false,
        "languages": ["English"]
      }
    },
    "linux": {
      "deb": {
        "depends": []
      },
      "appimage": {
        "bundleMediaFramework": false
      }
    },
    "macOS": {
      "minimumSystemVersion": "10.13",
      "exceptionDomain": "localhost"
    }
  }
}
